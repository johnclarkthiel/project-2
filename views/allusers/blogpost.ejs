<html>
<head>
	<title></title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
</head>
<body>
	<nav>
		<div class='navdiv'><a href="/allusers">Go back to the signup/login page</a></div>
		<div class='navdiv'><a href="/allusers/<%=blogpost.blogger%>">Go back to the author's page</a></div>
	</nav>
	<br>
		<h1><%=blogpost.title%></h1>
		<h2><%=blogpost.hed%></h2>
		<div id="public-post"><%=blogpost.dek%></div>
		<br>

		<% if (blogpost.published) { %>
		<form  action='allusers/blog/:id' method='POST'>
			<input type='hidden' name='title' value='<%=blogpost.title%>'>
			<input type='hidden' name='hed' value='<%=blogpost.hed%>'>
			<input type='hidden' name='dek' value='<%=blogpost.dek%>'>
			<input type='hidden' name='date'>
			<input type='hidden' name='published' value='true'>
			<input type='hidden' name='blogger' value='<%=blogpost.blogger%>'>
			<textarea id='comment-form' name='comment' placeholder='If you care to comment, this is the place to do it...'></textarea>
			<br>
			<button>Post your comment</button>
		</form>
		<br>

		<div id='comments-container'>
			<% for (var i = 0; i < blogpost.comments.length; i++) { %>
				<div class='comments'><%=blogpost.comments[i]%></div>
			<% } %>
		</div>	

	<script type="text/javascript" src='/js/script.js'></script>	
</body>
</html>